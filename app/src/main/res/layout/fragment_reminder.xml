<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container_remin"
    android:layout_height="match_parent"
    android:background="@color/abuabuan"
    tools:context=".Fragment.ReminderFragment">

    <!-- TODO: Update blank fragment layout -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/premireminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/crimson">


        <TextView
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/reminder"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/putih"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/illustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/premireminder"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="40dp"
        android:background="@drawable/reminder_home_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/illustration"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/nothing"
            android:textColor="@color/hitam"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/setreminder" />


        <Button
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/btnsetnewreminder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="@drawable/round_button"
            android:padding="10dp"
            android:text="@string/addnewreminder"
            android:textAllCaps="false"
            android:textColor="@color/putih"/>

    </LinearLayout>
</RelativeLayout>
</FrameLayout>